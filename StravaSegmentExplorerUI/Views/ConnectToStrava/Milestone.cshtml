
@using StravaSegmentExplorerUI.Controllers;

@{
    bool isStravaConnected = (bool)ViewData["IsStravaConnected"];
}

<h1>Milestones</h1>

@{
    ViewData["Title"] = "Milestone";

    if (!isStravaConnected)
    {
        <p>Visit your profile to connect to Strava</p>
    }
    else
    {
        <partial name="_MilestoneFilterPartial" />
    }
}


