@model MilestoneModel

@{
    ViewData["Title"] = "MilestoneFilterResult";
}

<h1>Milestones</h1>

<partial name="_MilestoneFilterPartial" />


<div class="container mt-2">
<p><strong>Sport:</strong> @Model.Sport</p>
<p><strong>Milestone:</strong> @Model.Milestone</p>
</div>


@if (Model.ResultIsReady)
{
    <div class="container mt-4">
        <div class="row bg-primary text-white rounded-top">
            <div class="col-md-2 d-flex align-items-center justify-content-center py-3">
                <h6 class="fw-bold m-0 fs-6">Name</h6>
            </div>
            <div class="col-md-2 d-flex align-items-center justify-content-center py-3">
                <h6 class="fw-bold m-0 fs-6">Distance / km</h6>
            </div>
            <div class="col-md-2 d-flex align-items-center justify-content-center py-3">
                <h6 class="fw-bold m-0 fs-6">Elevation Gain / m</h6>
            </div>
            <div class="col-md-2 d-flex align-items-center justify-content-center py-3">
                <h6 class="fw-bold m-0 fs-6">Moving Time</h6>
            </div>
            <div class="col-md-2 d-flex align-items-center justify-content-center py-3">
                <h6 class="fw-bold m-0 fs-6">Avg. Speed / kph</h6>
            </div>
            <div class="col-md-2 d-flex align-items-center justify-content-center py-3">
                <h6 class="fw-bold m-0 fs-6">Date</h6>
            </div>
        </div>
    </div>

    <div class="container mt-2">
        @foreach (var activity in Model.Results)
        {
            <div class="row border rounded-bottom py-2 mb-2">
                <div class="col-md-2 d-flex align-items-center justify-content-center">
                    <a href="https://www.strava.com/activities/@activity.Id" target="_blank"> @activity.Name </a>
                </div>
                <div class="col-md-2 d-flex align-items-center justify-content-center">
                    @activity.DistanceAsKm
                </div>
                <div class="col-md-2 d-flex align-items-center justify-content-center">
                    @activity.TotalElevationGain
                </div>
                <div class="col-md-2 d-flex align-items-center justify-content-center">
                    @activity.FormatMovingTime
                </div>
                <div class="col-md-2 d-flex align-items-center justify-content-center">
                    @activity.AverageSpeedInKmh
                </div>
                <div class="col-md-2 d-flex align-items-center justify-content-center">
                    @activity.StartDate
                </div>
            </div>
        }
    </div>
}